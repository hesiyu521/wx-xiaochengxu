.div{
  width: 95%;
  min-height: 200rpx;
  margin: 20rpx auto;
  display: flex;
flex-wrap:wrap;
justify-content: space-between 
}
.box{
  width: 45%;
  height: 480rpx;
  font-size: 29rpx;
  border-bottom:1rpx #eeeeee solid; 
  padding: 30rpx 17rpx 50rpx 17rpx;
}
.box image{
  width: 325rpx;
  height: 330rpx;
}
.pice{
  color: red;
  font-weight: 900;
  margin: 10rpx 0;
}
.box:nth-child(even){
  border-left:1rpx #eeeeee solid; 
}