@import "./../order/order.wxss";
.head{
  width: 750rpx;
  height: 270rpx;
  /* background: red; */
  border-bottom: 2rpx #e9e9e9 solid;
  padding-top: 60rpx;
  text-align: center
}
.userimg{
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 0 auto;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}
.userName{
  font-size: 40rpx
}
.allorder{
  padding:30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #555454;
  font-weight: 600;
  border-bottom:  2rpx #e9e9e9 solid
}
.oderight{
  font-size: 24rpx;
  color: #818181;
  font-weight: normal;
  line-height: 30rpx
}

.order{
  display: flex;
  padding: 30rpx 20rpx;
  justify-content: space-between;
  font-size: 26rpx
}
.order image{
  width: 80rpx;
  height: 60rpx;
}
.one{
  min-width: 150rpx;
  text-align: center;
}
.one text{
  color: red
}
.address{
  padding:30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #555454;
  font-weight: 600;
  border-bottom:  2rpx #e9e9e9 solid
}


.noaccredit{
