input{
  width: 82%;
  border: none;
  background:#f0f0f0;
  padding:5rpx 30rpx;
  border-radius: 80rpx;
  font-size: 30rpx
}
.search-history{
  padding: 20rpx 20rpx;
  /* border-bottom: 1rpx solid #f0f0f0 */

}
.title-box{
  display: flex;
  align-items: center;
  margin-bottom: 10rpx
}
.title-box image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx
}
.history-title{
  color:#8a8a8a;
  font-size: 30rpx
}
.history-content{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.history-content text{
  display: inline-block;
  border:1rpx solid #e0e0e0;
  margin:0 10rpx 20rpx 0;
  font-size: 30rpx;
  padding: 5rpx 30rpx;
  color:#8a8a8a;
  border-radius: 30rpx
}